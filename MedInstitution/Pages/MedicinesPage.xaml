<Page x:Class="MedInstitution.Pages.MedicinesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MedInstitution.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="434.04"
      Title="MedicinesPage"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="310"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DataGrid Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" x:Name="dataGrid" IsReadOnly="True"/>
        <Button Grid.Column="0" Grid.Row="1" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Add"/>
        <Button Grid.Column="1" Grid.Row="1" Content="Edit" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Edit"/>
        <Button Grid.Column="2" Grid.Row="1" Content="Delete" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Button_Delete"/>
    </Grid>
</Page>
